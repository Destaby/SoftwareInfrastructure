{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "inlineSourceMap": true,
        "incremental": true,
        "downlevelIteration": true,
        "useUnknownInCatchVariables": false,
        "types": ["node"],
        "outDir": "server/dist",
        "baseUrl": ".",
        "paths": {
            "server": ["./server/dist"]
        }
    },
    "include": ["server/src/**/*"]
}
