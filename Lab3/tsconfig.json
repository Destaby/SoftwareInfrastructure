{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
        "module": "commonjs",
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "incremental": true,
        "downlevelIteration": true,
        "useUnknownInCatchVariables": false,
        "baseUrl": ".",
        "types": ["node"],
        "paths": {
            "server": ["./server/src"]
        }
    }
}
